<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
    <h1>Enter Information Below:</h1>

    <p>Enter in the First Name, Last Name, and Email Domain of the email address you want to find. After entering in all
      the
      email addresses you want to find, hit the Find Emails button.</p>

    <br/>
    <%= form_tag find_emails_do_find_path, :class => "" do %>


        <div class="form-inline">
          <div class="form-group">
            <label for="first_name">First Name</label><br/>
            <%= text_field_tag :first_name, "", :class => "form-control", :placeholder => "John" %>
          </div>
          <div class="form-group">
            <label for="first_name">Last Name</label><br/>
            <%= text_field_tag :last_name, "", :class => "form-control", :placeholder => "Doe" %>
          </div>
          <div class="form-group">
            <label for="first_name">Email Domain</label><br/>
            <%= text_field_tag :domain, "", :class => "form-control", :placeholder => "google.com" %>
          </div>
          <div class="form-group">
            <label>&nbsp;</label><br/>
            <%= link_to "Add", "", :class => "btn btn-default" %>
          </div>
        </div>
        <br/>
        <br/>

        <div class="table-holder">
          <table class="table table-striped table-hover">
            <thead>
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email Domain</th>
            </tr>
            </thead>
            <tbody>
            <tr>
              <td>John
                <%= hidden_field_tag "persons[][first_name]", "irina" %>
              </td>
              <td>Doe
                <%= hidden_field_tag "persons[][last_name]", "linkedin" %>
              </td>
              <td>google.com
                <%= hidden_field_tag "persons[][domain]", "gmail.com" %>
              </td>
            </tr>
            <tr>
              <td>Alice
                <%= hidden_field_tag "persons[][first_name]", "iryna" %>
              </td>
              <td>Blue
                <%= hidden_field_tag "persons[][last_name]", "zayats" %>
              </td>
              <td>
                facebook.com
                <%= hidden_field_tag "persons[][domain]", "gmail.com" %>
              </td>
            </tr>
            <tr>
              <td>Alice
                <%= hidden_field_tag "persons[][first_name]", "taras" %>
              </td>
              <td>Blue
                <%= hidden_field_tag "persons[][last_name]", "havrylyukh" %>
              </td>
              <td>
                facebook.com
                <%= hidden_field_tag "persons[][domain]", "gmail.com" %>
              </td>
            </tr>
            </tbody>
          </table>
        </div>


        <br/>

        <%= submit_tag "Find Emails", :class => "btn btn-primary pull-right" %>

    <% end %>

  </div>
</div>
